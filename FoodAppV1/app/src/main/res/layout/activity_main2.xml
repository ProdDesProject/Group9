<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:layout_marginStart="25sp"
    android:layout_marginLeft="25sp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="25sp"
    android:layout_marginRight="25sp"
    android:layout_marginBottom="25sp"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/section21"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="horizontal"
        android:gravity="left|center_vertical">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="80dp"
            android:layout_height="80sp"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/section22"
        android:layout_below="@+id/section21"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/meal_text"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:fontFamily="@font/kalam"
            android:gravity="center_horizontal"
            android:text="What meal do you want to plan, UserName?"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="23sp"
            android:background="@drawable/text_view_bg"
            android:textColor="@color/text_view_font"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/section23"
        android:layout_width="match_parent"
        android:layout_height="220sp"
        android:layout_below="@+id/section22"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:background="@drawable/toast"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <RadioButton
                android:id="@+id/radio_one"
                android:layout_width="130sp"
                android:layout_height="50dp"
                android:checked="false"
                android:fontFamily="@font/blockletters1"
                android:gravity="center_vertical|left"
                android:onClick="checkButton"
                android:text="Breakfast"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/radio_two"
                android:layout_width="130sp"
                android:layout_height="50dp"
                android:fontFamily="@font/blockletters1"
                android:gravity="center_vertical|left"
                android:onClick="checkButton"
                android:textColor="@color/black"
                android:text="Lunch"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/radio_three"
                android:layout_width="130sp"
                android:layout_height="50dp"
                android:fontFamily="@font/blockletters1"
                android:gravity="center_vertical|left"
                android:onClick="checkButton"
                android:textColor="@color/black"
                android:text="Dinner"
                android:textSize="17sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section24"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@+id/section23"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical|bottom">

    <Button
        android:id="@+id/button_apply"
        android:layout_width="120sp"
        android:layout_height="50sp"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/white"
        android:fontFamily="@font/pomiere"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="Apply" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section25"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_below="@+id/section24"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical|bottom">

        <ImageButton
            android:id="@+id/calendar_button"
            android:layout_width="40dp"
            android:layout_height="40sp"
            android:background="@color/background"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/calendar5"/>

        <Space
            android:layout_width="70sp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/meals_button"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@color/background"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/group_event" />

        <Space
            android:layout_width="70sp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/recipes_button"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@color/background"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cooking_book" />

    </LinearLayout>



</RelativeLayout>