<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5"
    android:layout_marginStart="25sp"
    android:layout_marginLeft="25sp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="25sp"
    android:layout_marginRight="25sp"
    android:layout_marginBottom="25sp">
    <LinearLayout
        android:id="@+id/section11"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal"
        android:gravity="left|center_vertical">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="40sp"
            android:layout_height="40sp"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/section22"
        android:layout_below="@+id/section11"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/shopping_list_text"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:fontFamily="casual"
            android:text="Shopping list"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/shopping_list"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:text="List of ingredients from database"
                android:textSize="15sp" />
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/section33"
        android:layout_below="@+id/section22"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/other_ingredients_text"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:fontFamily="casual"
            android:text="Other ingredients"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/other_ingredients"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:text="List of ingredients from database"
                android:textSize="15sp" />
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/section44"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_below="@+id/section33"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <Button
            android:id="@+id/button_modify"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_width="120sp"
            android:layout_height="50sp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:text="Modify" />

        <Space
            android:layout_width="50sp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_save"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_width="120sp"
            android:layout_height="50sp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:text="Save" />

    </LinearLayout>
</RelativeLayout>