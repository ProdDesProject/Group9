<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:layout_marginStart="25sp"
    android:layout_marginLeft="25sp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="25sp"
    android:layout_marginRight="25sp"
    android:layout_marginBottom="25sp">

    <LinearLayout
        android:id="@+id/section1"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="40sp"
            android:layout_height="40sp"
            app:srcCompat="@mipmap/ic_launcher" />

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="Search the ingredient" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/section2"
        android:layout_below="@+id/section1"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/create_recipe_text"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text="Create your recipe"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="25sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/section3"
        android:layout_below="@+id/section2"
        android:layout_width="match_parent"
        android:layout_height="330sp"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/ingredients_text"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:fontFamily="casual"
            android:text="Ingredients:"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/ingredients_list_text"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:text="List of ingredients from database"
                android:textSize="15sp" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section4"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@+id/section3"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <Button
            android:id="@+id/button_add_ingredient"
            android:text="Add ingredient"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_width="120sp"
            android:layout_height="50sp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textAllCaps="false"
            />

        <Space
            android:layout_width="50sp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_continue"
            android:text="Continue"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_width="120sp"
            android:layout_height="50sp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textAllCaps="false" />

    </LinearLayout>



</RelativeLayout>