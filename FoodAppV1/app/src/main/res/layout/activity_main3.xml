<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@color/background">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="25sp"
    android:layout_marginLeft="25sp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="25sp"
    android:layout_marginRight="25sp"
    android:layout_marginBottom="25sp">

     <LinearLayout
        android:id="@+id/section31"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="horizontal"
        android:gravity="left|center_vertical">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="80dp"
            android:layout_height="80sp"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section32"
        android:layout_below="@+id/section31"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp">

    <TextView
        android:id="@+id/plan_meal_text"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:fontFamily="@font/kalam"
        android:gravity="center_horizontal|center_vertical"
        android:text="Plan your MealName"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="23sp"
        android:background="@drawable/text_view_bg"
        android:textColor="@color/text_view_font"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:id="@+id/section33"
        android:layout_below="@+id/section32"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@color/egg"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/date_button"
                    android:layout_width="130sp"
                    android:layout_height="70sp"
                    android:layout_weight="1"
                    android:background="@drawable/cute_egg"
                    android:fontFamily="@font/blockletters1"
                    android:text="Date:"
                    android:textAllCaps="false"
                    android:textColor="@color/egg_font"
                    android:textSize="18sp"
                    android:gravity="center"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/meal_date_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Tap on date"
                android:fontFamily="@font/blockletters2"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="center"
                android:gravity="center_horizontal|center_vertical"
                android:backgroundTint="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="130sp"
                    android:layout_height="70sp"
                    android:layout_weight="1"
                    android:background="@drawable/cute_egg"
                    android:fontFamily="@font/blockletters1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Small:"
                    android:textAlignment="center"
                    android:textColor="@color/egg_font"
                    android:textSize="18sp" />
                <ImageButton
                    android:id="@+id/info_small_meal"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="2sp"
                    android:layout_alignRight="@id/textView6"
                    android:layout_alignTop="@+id/textView6"
                    app:srcCompat="@drawable/mark2"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter" />

            </RelativeLayout>

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:fontFamily="@font/blockletters2"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="130sp"
                    android:layout_height="70sp"
                    android:layout_weight="1"
                    android:background="@drawable/cute_egg"
                    android:fontFamily="@font/blockletters1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Medium:"
                    android:textAlignment="center"
                    android:textColor="@color/egg_font"
                    android:textSize="18sp" />
                <ImageButton
                    android:id="@+id/info_medium_meal"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="2sp"
                    android:layout_alignRight="@id/textView3"
                    android:layout_alignTop="@+id/textView3"
                    app:srcCompat="@drawable/mark2"
                    android:foregroundGravity="right"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter" />


            </RelativeLayout>



            <EditText
                android:id="@+id/editTextNumber3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:fontFamily="@font/blockletters2"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="130sp"
                android:layout_height="70sp"
                android:layout_weight="1"
                android:background="@drawable/cute_egg"
                android:fontFamily="@font/blockletters1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Large:"
                android:textAlignment="center"
                android:textColor="@color/egg_font"
                android:textSize="18sp" />
            <ImageButton
                android:id="@+id/info_large_meal"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginRight="2sp"
                android:layout_marginTop="2sp"
                android:layout_alignRight="@id/textView5"
                android:layout_alignTop="@+id/textView5"
                app:srcCompat="@drawable/mark2"
                android:foregroundGravity="right"
                android:background="@color/transparent"
                android:scaleType="fitCenter" />

            </RelativeLayout>

            <EditText
                android:id="@+id/editTextNumber2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:ems="10"
                android:fontFamily="@font/blockletters2"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section34"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_below="@+id/section33"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical|bottom"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp">

        <Button
            android:id="@+id/button_choose_recipe"
            android:text="Choose recipe"
            android:layout_width="120sp"
            android:layout_height="50sp"
            android:fontFamily="@font/pomiere"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            />

        <Space
            android:layout_width="50sp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_create_recipe"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/pomiere"
            android:text="Create recipe"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>
</RelativeLayout>