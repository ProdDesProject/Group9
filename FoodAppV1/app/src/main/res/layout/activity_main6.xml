<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity6"
    android:layout_marginStart="25sp"
    android:layout_marginLeft="25sp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="25sp"
    android:layout_marginRight="25sp"
    android:layout_marginBottom="25sp">

    <LinearLayout
        android:id="@+id/section61"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal"
        android:gravity="left|center_vertical">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="40sp"
            android:layout_height="40sp"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/section62"
        android:layout_below="@+id/section61"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/added_meal_text"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text="Your meal was added to the calendar! Plan another one?"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="25sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/section63"
        android:layout_width="match_parent"
        android:layout_height="220sp"
        android:layout_below="@+id/section62"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RadioButton
                android:id="@+id/radio_one2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:gravity="center_horizontal"
                android:onClick="checkButton"
                android:text="Breakfast"
                android:textAlignment="center"
                android:textSize="22sp"
                android:fontFamily="casual"/>

            <RadioButton
                android:id="@+id/radio_two2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:onClick="checkButton"
                android:text="Lunch"
                android:textAlignment="center"
                android:textSize="22sp"
                android:fontFamily="casual"/>

            <RadioButton
                android:id="@+id/radio_three2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:onClick="checkButton"
                android:text="Dinner"
                android:textAlignment="center"
                android:textSize="22sp"
                android:fontFamily="casual"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section64"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@+id/section63"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <Button
            android:id="@+id/button_apply2"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_width="120sp"
            android:layout_height="50sp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:text="Apply" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section65"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_below="@+id/section64"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">
        <ImageButton
            android:id="@+id/calendar_button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/ic_menu_my_calendar" />

        <Space
            android:layout_width="50sp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/meals_button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/ic_menu_today" />

        <Space
            android:layout_width="50sp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/modify_meal_button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/ic_menu_edit" />

    </LinearLayout>



</RelativeLayout>