<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity6">

    <ImageView
        android:id="@+id/logo6"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="400sp"
        android:layout_marginRight="400sp"
        android:layout_marginBottom="700sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/meal_text2"
        android:text="Your meal was added to the calendar. Plan another one?"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/radioGroup2">

        <RadioButton
            android:id="@+id/radio_one2"
            android:textSize="22sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:onClick="checkButton"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/radio_two2"
            android:textSize="22sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch"
            android:onClick="checkButton"/>
        <RadioButton
            android:id="@+id/radio_three2"
            android:textSize="22sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner"
            android:onClick="checkButton"/>
    </RadioGroup>
    <Button
        android:id="@+id/button_apply2"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470sp"
        android:layout_marginBottom="100sp"
        android:text="apply" />

    <ImageButton
        android:id="@+id/calendar_button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="590sp"
        android:layout_marginEnd="250sp"
        android:layout_marginRight="250sp"
        android:layout_marginBottom="15sp"
        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

    <ImageButton
        android:id="@+id/meals_button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="160sp"
        android:layout_marginLeft="120sp"
        android:layout_marginTop="590sp"
        android:layout_marginEnd="300sp"
        android:layout_marginRight="200sp"
        android:layout_marginBottom="15sp"
        app:srcCompat="@android:drawable/ic_menu_today" />

    <ImageButton
        android:id="@+id/modify_meal_button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="300sp"
        android:layout_marginLeft="300sp"
        android:layout_marginTop="590sp"
        android:layout_marginEnd="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="15sp"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</RelativeLayout>