<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodAppV1" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- buttons -->
        <item name="buttonStyle">@style/CustomButton</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
    </style>
        <!-- button style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/calendar_accent</item>
        <!--selected Item color-->
        <item name="colorControlActivated">@color/calendar_item</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/calendar_hl_color</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/calendar_bg</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/calendar_text</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/calendar_week</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/calendar_numbers</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/calendar_day</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/calendar_year</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="MyTitleTextStyle">
        <item name="android:textColor">@color/alert_font</item>
        <item name="android:fontFamily">@font/kalam</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MessageStyle">
        <item name="android:fontFamily">@font/pomiere</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/alert_bg</item>
        <item name="android:textColor">@color/alert_text</item>
        <item name="android:textColorPrimary">@color/alert_font</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowTitleStyle">@style/MyTitleTextStyle</item>
        <item name="android:textAppearance">@style/MessageStyle</item>
    </style>


</resources>