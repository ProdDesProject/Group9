<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodAppV1" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- buttons -->
        <item name="buttonStyle">@style/CustomButton</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <!-- Customize your theme here. -->
    </style>
        <!-- button style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/calendar_accent</item>
        <!--selected Item color-->
        <item name="colorControlActivated">@color/calendar_item</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/calendar_hl_color</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/calendar_bg</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/calendar_text</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/calendar_week</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/calendar_numbers</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/calendar_day</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/calendar_year</item>

    </style>
</resources>